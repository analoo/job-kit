</section>
<section class="uk-preserve-color uk-margin-large-bottom">
    <div class="uk-section-large">

        <div class="uk-grid-match uk-child-width-expand@m" uk-grid>
            <div>
                <div class="uk-card uk-card-default uk-card-body">
                    <div class="uk-flex uk-flex-middle uk-flex-center">
                        <button class="uk-button-large uk-button-secondary">Applications</button>
                    </div>
                    <h3 class="uk-text-center">Tracked Job Applications</h3>
                </div>
            </div>
            <div>
                <div class="uk-card uk-card-default uk-card-body">
                    <div class="uk-flex uk-flex-middle uk-flex-center">
                        <button class="uk-button-large uk-button-secondary">Jobs</button>
                    </div>
                    <h3 class="uk-text-center">Open Job Opportunties</h3>
                </div>
            </div>
        </div>
    </div>
</section>

<div>
    <h1>Placeholder Add Form</h1>

    <form class="create-form" style="background-color: white; color: black">
        <div class="form-group" id="app-qs">
            <label for="app-title">App Title:</label>
            <input type="text" id="app-title" name="app-id" placeholder="">
            {{!-- should be a radio button --}}
            <label for="app-type">Type:</label>
            <input type="text" id="app-type" name="app-type" placeholder="FTE">

            <label for="app-desc">Description:</label>
            <input type="text" id="app-desc" name="app-desc" placeholder="">

            <label for="app-industry">Industry:</label>
            <input type="text" id="app-industry" name="app-industry" placeholder="tech">

            <label for="app-zipCode">Zipcode:</label>
            <input type="text" id="app-zipCode" name="app-zipCode" placeholder="">

            <label for="app-salary">Salary:</label>
            <input type="text" id="app-salary" name="app-salary" placeholder="0">

            {{!-- should probably be a date type --}}
            <label for="app-applied">Date Applied:</label>
            <input type="text" id="app-applied" name="app-applied" placeholder="">
            {{!-- should probably be radio button with a few options --}}
            <label for="app-rating">Rating:</label>
            <input type="text" id="app-rating" name="app-rating" placeholder="">
        </div>
        <button type="submit" id="app-add"> Add Application </button>
    </form>


</div>
