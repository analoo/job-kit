<div class="profile-card" id="profile">
	<div class="uk-card uk-card-large uk-card-secondary uk-border-rounded">
		<div class="uk-card-header">
			<img data-src="{{image}}" width="220px" height="" alt="" uk-img class="uk-border-circle">
			<div class="uk-grid uk-grid-small uk-text-small uk-margin" data-uk-grid>
				<div class="uk-width-expand">
					<span class="uk-text-lead">User Profile</span>
				</div>
				<div class="uk-width-1-2 uk-text-right uk-text-muted">
					<span data-uk-icon="icon:clock; ratio: 0.8"></span> Date Joined : {{createdAt}}
				</div>
			</div>
		</div>
		<div class="uk-card-body uk-padding-remove-top uk-padding-remove-bottom">
			
			<ul uk-accordion="multiple: true">
				<li class="uk-open">
					<a class="uk-accordion-title" href="#">Name: </a>
					<div class="uk-accordion-content">
						<input rows="2" class="uk-input uk-border-pill" placeholder="{{name}}" type="text"
                                        id="prof-name">
						{{!-- <textarea name=""  class="uk-width-expand uk-border-rounded" 
							placeholder=""></textarea> --}}
					</div>
				</li>

				<li class="uk-open">

					<a class="uk-accordion-title" href="#">Github: </a>
					<div class="uk-accordion-content">
						<input rows="2" class="uk-input uk-border-pill" placeholder="{{github}}" type="text"
                                        id="prof-gh-name">
						{{!-- <textarea name="" id="prof-gh-name" class="uk-width-expand uk-border-rounded" rows="2"
							placeholder="">{{github}}</textarea>  --}}
					<hr>
				</li>
				<li class="uk-open">
					<a class="uk-accordion-title" href="#">Desired Job Title: </a>
					<div class="uk-accordion-content">
						<input rows="2" class="uk-input uk-border-pill" placeholder="{{jobTitle}}" type="text"
                                        id="prof-job">
						{{!-- <textarea name="" id="prof-job" class="uk-width-expand uk-border-rounded" rows="2"
							placeholder="">{{jobTitle}}</textarea> --}}
					</div>
					<hr>
				</li>
				<li class="uk-open">
					<a class="uk-accordion-title" href="#">Primary Coding Language </a>
					<div class="uk-accordion-content">
						<span class="cat-txt">Current Selection: {{current_lang}}</span>
						<select class="uk-select uk-border-pill" id="prof-lang" default="{{current_lang}}">
							{{#each languages}}
							{{> jobs/list-block}}
							{{/each}}
						</select>
					</div>
					<hr>
				</li>

				{{!-- <li class="uk-open">
					<a class="uk-accordion-title" href="#">Location: </a>
					<div class="uk-accordion-content">
						<input rows="2" class="uk-input uk-border-pill" placeholder="{{zipCode}}" type="text"
                                        id="prof-zip">
						{{!-- <textarea name="" id="prof-zip" class="uk-width-expand uk-border-rounded" rows="2"
							placeholder="">{{zipCode}}</textarea> --}}
					{{!-- </div>
					<hr>
				</li> --}} 
			</ul>
		</div>
		<div class="uk-card-footer">
			<div class="uk-grid uk-grid-small uk-grid-divider uk-flex uk-flex-middle" data-uk-grid>
				<div class="uk-width-expand uk-text-small">
					<button type="submit" class="uk-button uk-button-primary uk-border-pill uk-margin-small-bottom uk-width-1-1 uk-margin profile-save"
						data-id={{id}}>Save
            </button>
					{{!-- <button
						class="uk-button uk-button-default uk-width-1-1 uk-margin-small-bottom uk-border-rounded profile-save"
						data-id={{id}}>Save</button> --}}
				</div>
			</div>
		</div>
	</div>
</div>