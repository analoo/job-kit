<!-- card -->
{{#each applications}}
				
<div class="application-card" id="application{{id}}">
    <div class="uk-card uk-card-small uk-card-secondary uk-border-rounded">
        <div class="uk-card-header">
            <div class="uk-grid uk-grid-small uk-text-small" data-uk-grid>
                <div class="uk-width-expand">
                    <span class="cat-txt">Job Application {{id}}</span>
                </div>
                <div class="uk-width-auto uk-text-right uk-text-muted">
                    <span data-uk-icon="icon:clock; ratio: 0.8"></span> Date Applied: {{dateApplied}}
                </div>
            </div>
        </div>
        <div class="uk-card-body">
            <h3 class="uk-margin-small-bottom uk-margin-remove-adjacent">{{title}}</h3>
            <h4 class="uk-margin-small-bottom uk-margin-remove-adjacent">Company Name {{company}}</h4>
            <h5 class="uk-margin-small-bottom uk-margin-remove-adjacent">{{zipCode}}</h5>
            <p class="uk-text-small uk-text-muted">{{description}}</p>
            <p class="uk-text-small uk-text-muted uk-text-bold">{{salaryRange}}</p>
            <!-- Model Button -->
            <a class="uk-button uk-button-default uk-border-rounded" href="#modal-center" uk-toggle>Details</a>
            <!-- Modal Info -->
            <div id="modal-center" class="uk-flex-top" uk-modal>
                <div class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical">

                    <button class="uk-modal-close-default" type="button" uk-close></button>

                    <h3 class="uk-margin-small-bottom uk-margin-remove-adjacent">{{title}}</h3>
                    <h4 class="uk-margin-small-bottom uk-margin-remove-adjacent">Company Name {{company}}</h4>
                    <h5 class="uk-margin-small-bottom uk-margin-remove-adjacent">{{zipCode}}</h5>
                    <p class="uk-text-small uk-text-muted">{{description}}</p>
                    <p class="uk-text-small uk-text-muted uk-text-bold">{{salaryRange}}</p>
                    
                    <hr>

                    <p>Job Application ID: {{id}}</p>
                    <p>Company Field: {{company}}</p>
                    <p>Internal Contacts: </p>

                    <hr>

                    <p>Application Process & Method: </p>
                    <p>Resume Version: </p>
                    <p>Rating: {{rating}}</p>
                    <p>Next Steps: </p>

                    <hr>

                    <p>User Notes: </p>
                </div>
            </div>

        </div>
        <div class="uk-card-footer">
            <div class="uk-grid uk-grid-small uk-grid-divider uk-flex uk-flex-middle" data-uk-grid>
                <div class="uk-width-expand uk-text-small">
                    User Rating: {{rating}}
                </div>
                <div class="uk-width-expand uk-text-small">
                    Current Stage
                </div>
                <div class="uk-width-expand uk-text-small">
                    <a href="#">Job Posting</a> 
                </div>
            </div>
        </div>
    </div>
    <br>
	<hr>
	<br>
</div>
<!-- /card -->
{{/each}}